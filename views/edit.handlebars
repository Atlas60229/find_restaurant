<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  



<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
        <p class="mb-1">
            <span class="text-secondary">
            <label for="name" class="form-label">名稱：</label><br>
            <input type="text" class="form-control" placeholder="餐廳名稱" name="name" value="{{ restaurant.name }}" id='name' required>
            </span>
        </p>
        
        <p class="mb-1">
            <label for="rating" class="form-label">評分：</label>
            <input type="number" class="form-control" name="rating" id="rating" min="1" max="5" step="0.1" placeholder="請輸入餐廳評分" value="{{restaurant.rating}}" required />
        </p>

        <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          <label for="category" class="form-label">類別：</label>
        
              
      <input list="categories" class="form-control" name="category" id="category" placeholder="餐廳類別" value="{{restaurant.category}}" required />
      <datalist id="categories">
        <option value="義式餐廳">義式餐廳</option>
        <option value="中東料理">中東料理</option>
        <option value="日本料理">日本料理</option>
        <option value="美式">美式</option>
        <option value="酒吧">酒吧<option>
        <option value="咖啡">咖啡</option>
      </datalist>
      </span>
      </p>

        <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          <label for="location" class="form-label">地址：</label><br>
          <input type="text" class="form-control" placeholder="餐廳地址" name="location" value="{{ restaurant.location }}" id='location' required>
        </span>


        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>      
        <input type="url" class="form-control" name="google_map" id="google_map" placeholder="餐廳地圖連結" value="{{restaurant.google_map}}" required />
        </p>

        <p class="mb-1">
            <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            <label for="phone" class="form-label">電話：</label><br>
            <input type="text" class="form-control" placeholder="餐廳電話" name="phone" value="{{ restaurant.phone }}" id='phone' required>
            </span>
        </p>
      <p class="mb-1">
              <label for="description" class="form-label">簡介：</label>
      <textarea class="form-control" name="description" id="description" rows="5" placeholder="請輸入餐廳描述內容" required>
        {{restaurant.description}}
      </textarea>
      </p>

      <p class="mb-1">
        <label for="image" class='form-label'>餐廳圖片：</label><br>
        <input type="url" class="form-control" name="image" id="image" placeholder="請輸入圖片網址" value="{{restaurant.image}}" required>
      </p>
    </div>

  </div>
  <div class="d-flex footer justify-content-end">
        <button class="btn btn-primary mx-1" type="submit">存擋</button>
        <input type="reset" class="mx-1">
        <button class="btn btn-secondary mx-1" href="/">取消</button>

  </div>
</div>
</form>